@model MySkills.Models.AboutMe

<div class="container theme-showcase" role="main">
    <div>
        <div class="resume-header">
            <h1 class="resume-title">О СЕБЕ</h1>
            <p class="lead resume-description">Кратко о себе:</p>
        </div>

        <div class="resume-text">
            <p>@Model.Description</p>
        </div>

        <div id="myCarousel" class="carousel slide" data-ride="carousel" style="position:relative;z-index:1;">
            <ol class="carousel-indicators" style="z-index:1 !important">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
                <li data-target="#myCarousel" data-slide-to="3"></li>
            </ol>

            <div class="carousel-inner" role="listbox">
                <div class="item active">
                    <img class="d-block w-100" src="~/Content/Pictures/myPhoto01.jpg" alt="Second slide" style="width:100%;">
                    <div class="carousel-caption">
                        <h3>Набережная Ялты и я</h3>
                        <p>Ялта всегда прекрасна</p>
                    </div>
                </div>

                <div class="item">
                    <img class="d-block w-100" src="~/Content/Pictures/myPhoto02.jpg" alt="Third slide" style="width:100%;">
                    <div class="carousel-caption">
                        <h3>Fest</h3>
                        <p>Музыка это здорово</p>
                    </div>
                </div>

                <div class="item">
                    <img class="d-block w-100" src="~/Content/Pictures/myPhoto03.jpg" alt="First slide" style="width:100%;">
                    <div class="carousel-caption">
                        <h3>Рыжий кот</h3>
                        <p>Люблю кошек!</p>
                    </div>
                </div>

                <div class="item">
                    <img class="d-block w-100" src="~/Content/Pictures/myPhoto04.jpg" alt="First slide" style="width:100%;">
                    <div class="carousel-caption">
                        <h3>Всё нормально!</h3>
                        <p>Жизни нужно улыбаться</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
