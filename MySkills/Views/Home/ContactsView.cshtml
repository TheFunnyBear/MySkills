@model MySkills.Models.Contacts

<div class="container theme-showcase" role="main">
    <div>
        <div class="resume-header">
            <h1 class="resume-title">@Resources.ContactsView.Title</h1>
            <p class="lead resume-description">@Resources.ContactsView.Description</p>
        </div>

        <div>
            <address class="resume-text" >
                <table border="0">
                    <tr>
                        <td width="70%"></td>
                        <td width="30%">
                            <strong>@Model.FullName</strong><br />
                            <abbr title="@Resources.ContactsView.EMailCaption">@Resources.ContactsView.EMailText</abbr><a href="mailto:>@Model.Email">@Model.Email</a><br />
                            <abbr title="@Resources.ContactsView.SkypeCaption">@Resources.ContactsView.SkypeText</abbr><a href="skype:@Model.Skype?chat">@Model.Skype</a><br />
                            <abbr title="@Resources.ContactsView.PhoneCaption">@Resources.ContactsView.PhoneText</abbr>@Model.Phone<br />
                            <abbr title="@Resources.ContactsView.WebSiteCaption">@Resources.ContactsView.WebSiteText</abbr><a href="@Model.WebSite">@Model.WebSite</a><br />
                            <br />
                            <abbr title="@Resources.ContactsView.LocationCaption">@Resources.ContactsView.LocationText</abbr>@Model.Location
                            <br />
                        </td>
                    </tr>
                </table>

                <div class="resume-contacts-text">
                    <abbr title="@Resources.ContactsView.QrCodeCaption">@Resources.ContactsView.QrCodeText</abbr> <br />
                    <img src="@String.Format("data:image/png;base64,{0}", Convert.ToBase64String(Model.QrCode))" />
                    <br />
                    <abbr title="@Resources.ContactsView.VCarCaption">@Resources.ContactsView.VCardFileText</abbr> <i> @Html.ActionLink(@Resources.ContactsView.VCardFileLink, "VCardFile") </i>
                </div>
                <br />
                <br />
            </address>
        </div>
    </div>
</div>
