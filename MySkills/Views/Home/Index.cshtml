@model MySkills.Models.Contacts

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>КОНТАКТЫ</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="../../assets/css/ie10-viewport-bug-workaround.css" rel="stylesheet">
    <link href="theme.css" rel="stylesheet">
    <link href="~/Content/ResumeStyles.css" rel="stylesheet">
</head>
<body>
    
    @Html.Partial("NavBarView")

    <div class="container theme-showcase" role="main">
        <div>
            <div class="resume-header">
                <h1 class="resume-title">КОНТАКТЫ</h1>
                <p class="lead resume-description">Для связи со мной используйте эти контактные данные.</p>
            </div>

            <div class="bd-example">
                <address>
                    <strong>@Model.FullName</strong><br />
                    <abbr title="E-Mail для связи">E-Mail: </abbr><a href="mailto:>@Model.Email">@Model.Email</a><br />
                    <abbr title="Skype для связи">Skype: </abbr><a href="skype:@Model.Skype?chat">@Model.Skype</a><br />
                    <abbr title="Контактный телефон">Телефон: </abbr>@Model.Phone<br />
                    <abbr title="Мой сайт">Web: </abbr><a href="@Model.WebSite">@Model.WebSite</a><br />
                    <br />
                    <abbr title="Тут я проживаю">Расположение: </abbr>@Model.Location
                </address>
                <br />
                <abbr title="Отсканируйте QR-код своим мобильным, чтобы получить контную информацию">QR код с контной информацией: </abbr> <br />
                <img src="@String.Format("data:image/png;base64,{0}", Convert.ToBase64String(Model.QrCode))" />
                <br />
                <abbr title="Скачать файл с контной информацией">Файл с контной информацией: </abbr> <i> @Html.ActionLink("скачать", "VCardFile") </i>
                <br />
            </div>
        </div>
    </div>

</body>
</html>
