@model MySkills.Models.SkillsAndAbilities

<div class="resume-header">
    <h1 class="resume-title">@Resources.SkillsAndAbilitiesView.Title</h1>
    <p class="lead resume-description">@Resources.SkillsAndAbilitiesView.Description</p>
</div>

<div class="container resume-text">
    <ul>
        @foreach (var skill in @Model.Skills)
        {
            <li>
                @skill.Name<br />
                @if (skill.SubSkills.Any())
                {
                    <ul>
                        @foreach (var subSkill in skill.SubSkills)
                        {
                            <li>@string.Format("\t{0};", subSkill)</li>
                        }
                    </ul>
                }
            </li>
        }
    </ul>
</div>
